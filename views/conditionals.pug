extends ./layout.pug
block content
    h3(align="center") Conditionals
    - var user = {description: 'foo bar baz'}
    - var authorised = false
    #user
        if !user.description && authorised
            h2.green Description
            p.description= user.description
        else if authorised
            h2.blue Description
            p.description.
                User has no description, 
                why not add one...
        else
            h2.red Description
            p.description User has no description

        unless authorised
            h2.red Warning
            p.description Please input your credentials